<?link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet"?>
<?link rel="stylesheet" type="text/css" href="~./web/css/bootstrap.min.css"?>
<window id="uploadToolbar" border="normal" apply="org.ICIQ.eChempad.web.ui.UploadToolbar" xmlns:ca="client/attribute" style="height:30px" sclass="upload-toolbar-window">
	<box width="100%" height="30px" pack="center" align="end">
		<hlayout sclass="z-valign-middle">
	  		<progressmeter id="uploadProgressMeter" value="0" width="100px" popup="uploadProgressMeterPopup, position=before_end" visible="false"  ca:data-animationspeed="0"/>
	  		<label id="uploadProgressMeterLabel" value="0/0" visible="false"/>
	  	</hlayout>
	  	
	   	<popup id="uploadProgressMeterPopup" style="z-index:10000" >				   						
	   		<vlayout height="500px" width="300px"  id="uploadingCalculationVlayout" style="overflow:auto" sclass="uploading-calculation-vlayout p-3">
	   			
	   			   			
	   		</vlayout>	   		
	   		<a id="clearFinishedUploads" href="" style="align:right" sclass="p-3">Clear finished uploads</a>			            		
	   	</popup>
	</box>		
</window>