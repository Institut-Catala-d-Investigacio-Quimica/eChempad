<?page title="Report Manager" contentType="text/html;charset=UTF-8"?>
<window id="reportManager" apply="org.ICIQ.eChempad.web.ui.ReportManager" border="none" hflex="1" vflex="1" closable="false">
	<borderlayout hflex="1" vflex="1">
		<north border="none" hflex="1" style="padding:10px">			
			<div class="d-flex flex-row flex-nowrap justify-content-between">
				<button id="repNewBtn" popup="newReportPopup" sclass="btn btn-primary" label="New report"/>									
				<div class="d-flex flex-row flex-nowrap justify-content-between">
					<textbox id="searchTxt" sclass="form-control ml-2" style="max-width: 200px" placeholder="Type to filter..."/>
					<button id="repClearBtn" sclass="btn btn-secondary clear-btn" tooltiptext="Clear search"/> 			  
				</div>
			</div>
		</north>
		<center border="none">
			<tree id="reportTree" hflex="1" vflex="10" multiple="true">
				<custom-attributes org.zkoss.zul.tree.rightSelect="true"/>
			 	<treecols>				 				     				   
			      <treecol id="idTreecol" hflex="2" label="Id" sort="none" align="right"/>
			      <treecol id="nameTreecolReport" hflex="4" label="Name" align="left" sort="auto"/>
			      <treecol id="descriptionTreecol" hflex="10" label="Description" align="left" sort="auto"/>
			      <treecol id="typeTreecol" hflex="6" label="Type" sort="auto"/>
			      <treecol id="creationDateTreecol" hflex="3" label="Creation Date" sort="auto"/>	
			      <treecol id="publishedTreecol"  hflex="3"  label="Published?" sort="none" visible="false"/>
			    </treecols>
			    <treechildren id="reportTreeChildren">
			    		  
			    </treechildren>				
			</tree>
		</center>
		<south>
			<label value="*right click shows report options" sclass="p-3" style="valign:'bottom"/>			
		</south>				
	</borderlayout>
	  	    				  			   			 										 
	<menupopup id="editReportPopup" sclass="custom-dropdown-menu">
        <menuitem id="editReportOpenItem" label="Open" />
        <menuseparator sclass="dropdown-divider" />
        <menuitem id="editReportRemoveItem" label="Remove" />
    </menupopup>
    <menupopup id="newReportPopup" sclass="custom-dropdown-menu">    
    </menupopup>
</window>
